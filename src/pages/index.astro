---
import BaseLayout from '../layouts/BaseLayout.astro';
import Masthead from '../components/Masthead.astro';
import Ornament from '../components/Ornament.astro';
import SectionHeader from '../components/SectionHeader.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { getCollection } from 'astro:content';

// Get all non-draft posts, sorted by date
const posts = (await getCollection('writing', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get the latest post as featured
const featuredPost = posts[0];
const recentPosts = posts.slice(1, 6); // Next 5 posts
const hasPosts = posts.length > 0;
---

<BaseLayout title="Rishi Mullur — Writings & Dispatches">
  <main class="home fade-in">
    <Masthead />
    
    <!-- About the Author Section -->
    <section class="about-section">
      <div class="about-content">
        <!-- Portrait -->
        <div class="portrait-container">
          <img 
            src="/Rishi_Mullur.jpg" 
            alt="Rishi Mullur" 
            class="author-portrait"
          />
        </div>

        <div class="about-text">
          <h2 class="about-headline">About the Author</h2>
          <Ornament type="rule" />
          <p class="about-bio">
            <span class="drop-cap">I</span> build things — mostly software, sometimes systems. I've been a programmer, 
            a PM, and a founder, depending on what needed to get built. Usually found 
            working through one of the many unread books on my shelf.
          </p>
        </div>
      </div>
    </section>

    <Ornament type="ornate" />

    <!-- Dispatches Section - Only show if there are posts -->
    {hasPosts ? (
      <>
        {featuredPost && (
          <section class="featured-section">
            <SectionHeader title="Latest Dispatch" />
            <ArticleCard 
              title={featuredPost.data.title}
              description={featuredPost.data.description}
              date={featuredPost.data.pubDate}
              slug={featuredPost.slug}
              featured={true}
            />
          </section>
        )}

        {recentPosts.length > 0 && (
          <section class="recent-section">
            <SectionHeader title="Recent Dispatches" />
            <div class="article-list">
              {recentPosts.map((post) => (
                <ArticleCard 
                  title={post.data.title}
                  date={post.data.pubDate}
                  slug={post.slug}
                />
              ))}
            </div>
            <div class="view-all">
              <a href="/writing">View All Writings →</a>
            </div>
          </section>
        )}

        <Ornament type="ornate" />
      </>
    ) : (
      <section class="coming-soon">
        <p class="coming-soon-text">Dispatches forthcoming.</p>
      </section>
    )}

    <!-- Correspondence & Notices -->
    <section class="notices-section">
      <SectionHeader title="Correspondence & Notices" />
      <div class="notices-grid">
        <a href="https://linkedin.com/in/rishimullur" class="notice-link" target="_blank" rel="noopener">
          LinkedIn
        </a>
        <a href="https://twitter.com/rishimullur" class="notice-link" target="_blank" rel="noopener">
          Twitter
        </a>
        <a href="https://haecceity.substack.com/" class="notice-link" target="_blank" rel="noopener">
          Substack
        </a>
        <a href="mailto:rishi.rmullur@gmail.com" class="notice-link">
          rishi.rmullur@gmail.com
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="site-footer">
      <Ornament type="double" />
      <p class="footer-text">Est. 2025 · San Francisco Bay Area</p>
    </footer>
  </main>
</BaseLayout>

<style>
  .home {
    max-width: 100%;
  }

  /* About Section */
  .about-section {
    margin-bottom: var(--space-lg);
  }

  .about-content {
    display: flex;
    gap: var(--space-xl);
    align-items: flex-start;
  }

  /* Portrait */
  .portrait-container {
    flex-shrink: 0;
    width: 140px;
    height: 140px;
    border-radius: 50%;
    padding: 4px;
    background: var(--paper-light);
    border: 2px solid var(--border-dark);
  }

  .author-portrait {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    filter: sepia(15%) contrast(1.05);
    display: block;
  }

  .about-text {
    flex: 1;
  }

  .about-headline {
    font-family: var(--font-headline);
    font-size: 1.25rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-xs);
  }

  .about-text :global(.ornament) {
    margin: var(--space-sm) 0;
  }

  .about-bio {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--ink-dark);
    text-align: justify;
    margin: 0;
  }

  .about-bio .drop-cap {
    font-size: 3rem;
    line-height: 0.8;
    padding-right: var(--space-xs);
    color: var(--accent-red);
  }

  /* Coming Soon Section */
  .coming-soon {
    text-align: center;
    padding: var(--space-xl) 0;
  }

  .coming-soon-text {
    font-style: italic;
    color: var(--ink-faded);
    font-size: 1.1rem;
    text-align: center;
  }

  /* Featured Section */
  .featured-section {
    margin-bottom: var(--space-xl);
  }

  /* Recent Section */
  .recent-section {
    margin-bottom: var(--space-xl);
  }

  .article-list {
    border-top: 1px solid var(--border-medium);
    border-bottom: 1px solid var(--border-medium);
    padding: var(--space-sm) 0;
  }

  .view-all {
    text-align: center;
    margin-top: var(--space-md);
  }

  .view-all a {
    font-family: var(--font-meta);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Notices Section */
  .notices-section {
    margin-bottom: var(--space-xl);
  }

  .notices-grid {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-md) var(--space-xl);
  }

  .notice-link {
    font-family: var(--font-meta);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-bottom: 1px solid var(--border-medium);
    padding-bottom: 2px;
  }

  .notice-link:hover {
    border-bottom-color: var(--accent-red);
  }

  /* Footer */
  .site-footer {
    text-align: center;
    padding-top: var(--space-md);
  }

  .site-footer :global(.ornament) {
    margin-bottom: var(--space-md);
  }

  .footer-text {
    font-family: var(--font-meta);
    font-size: 0.8rem;
    color: var(--ink-faded);
    letter-spacing: 0.1em;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .about-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .portrait-container {
      margin-bottom: var(--space-md);
    }

    .about-bio {
      text-align: center;
    }

    .about-bio .drop-cap {
      float: none;
      display: block;
      font-size: 2.5rem;
      padding: 0;
      margin-bottom: var(--space-xs);
    }

    .notices-grid {
      flex-direction: column;
      align-items: center;
      gap: var(--space-sm);
    }
  }
</style>
