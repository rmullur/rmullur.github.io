---
interface Props {
  showDate?: boolean;
  compact?: boolean;
}

const { showDate = true, compact = false } = Astro.props;

// Format date in Victorian newspaper style
const today = new Date();
const day = today.getDate();
const suffix = (day === 1 || day === 21 || day === 31) ? 'st' 
             : (day === 2 || day === 22) ? 'nd'
             : (day === 3 || day === 23) ? 'rd' : 'th';
const weekday = today.toLocaleDateString('en-US', { weekday: 'long' });
const month = today.toLocaleDateString('en-US', { month: 'long' });
const year = today.getFullYear();
const formattedDate = `${weekday}, the ${day}${suffix} of ${month}, ${year}`;

// Calculate "issue number" (days since site launch)
const launchDate = new Date('2025-01-01');
const issueNumber = Math.floor((today.getTime() - launchDate.getTime()) / (1000 * 60 * 60 * 24));

// Roman numeral for volume (year)
const volume = year - 2024;
---

<header class:list={["masthead", { compact }]}>
  <!-- Top ornate border -->
  <div class="masthead-border-top">
    <div class="border-line"></div>
    <div class="border-ornaments">
      <span class="ornament">❧</span>
      <span class="ornament-center">✦</span>
      <span class="ornament">❧</span>
    </div>
    <div class="border-line"></div>
  </div>
  
  <!-- Masthead info bar -->
  {showDate && !compact && (
    <div class="masthead-info-bar">
      <span class="info-item">Vol. {volume}</span>
      <span class="info-separator">✦</span>
      <span class="info-item location">San Francisco</span>
      <span class="info-separator">✦</span>
      <span class="info-item">No. {issueNumber}</span>
    </div>
  )}
  
  <div class="masthead-content">
    <a href="/" class="masthead-title-link">
      <h1 class="masthead-title">
        <span class="title-flourish-left">☙</span>
        Rishi Mullur
        <span class="title-flourish-right">❧</span>
      </h1>
    </a>
    
    <div class="masthead-rule">
      <span class="rule-end">◆</span>
      <span class="rule-line"></span>
      <span class="rule-center">❖</span>
      <span class="rule-line"></span>
      <span class="rule-end">◆</span>
    </div>
    
    <p class="masthead-subtitle">Notes & Observations</p>
    
    {!compact && (
      <p class="masthead-tagline">
        ❦ Wherein the Author shares his Thoughts upon sundry Matters ❦
      </p>
    )}
  </div>
  
  {showDate && (
    <div class="masthead-date-bar">
      <span class="date-text">{formattedDate}</span>
    </div>
  )}
  
  <!-- Bottom ornate border -->
  <div class="masthead-border-bottom">
    <div class="border-line thick"></div>
    <div class="border-line thin"></div>
  </div>
</header>

<style>
  .masthead {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }
  
  .masthead.compact {
    margin-bottom: var(--space-lg);
  }
  
  /* ─── Top Border ─── */
  .masthead-border-top {
    margin-bottom: var(--space-sm);
  }
  
  .border-line {
    height: 2px;
    background: var(--border-dark);
    margin: 2px 0;
  }
  
  .border-line.thick {
    height: 3px;
  }
  
  .border-line.thin {
    height: 1px;
    margin-top: 3px;
  }
  
  .border-ornaments {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-lg);
    padding: var(--space-xs) 0;
  }
  
  .ornament {
    font-size: 1rem;
    color: var(--border-dark);
    opacity: 0.8;
  }
  
  .ornament-center {
    font-size: 0.7rem;
    color: var(--border-dark);
  }
  
  /* ─── Info Bar ─── */
  .masthead-info-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-xs) 0;
    margin-bottom: var(--space-sm);
    font-family: var(--font-meta);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--ink-faded);
  }
  
  .info-separator {
    font-size: 0.4rem;
    color: var(--border-medium);
  }
  
  .info-item.location {
    font-style: italic;
    letter-spacing: 0.15em;
  }
  
  /* ─── Content ─── */
  .masthead-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--space-md) 0;
  }
  
  .masthead-title-link {
    border: none;
    display: inline-block;
  }
  
  .masthead-title-link:hover {
    border: none;
  }
  
  .masthead-title {
    font-family: var(--font-masthead);
    font-size: 4rem;
    font-weight: 900;
    letter-spacing: 0.08em;
    margin: 0;
    color: var(--ink-black);
    line-height: 1;
    text-transform: uppercase;
    transition: color 0.2s ease;
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: var(--space-md);
  }
  
  .title-flourish-left,
  .title-flourish-right {
    font-size: 1.5rem;
    color: var(--border-dark);
    opacity: 0.6;
    font-family: serif;
  }
  
  .masthead-title-link:hover .masthead-title {
    color: var(--accent-red);
  }
  
  .compact .masthead-title {
    font-size: 2.5rem;
  }
  
  /* ─── Decorative Rule ─── */
  .masthead-rule {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    margin: var(--space-sm) 0;
    width: 100%;
    max-width: 400px;
  }
  
  .rule-line {
    flex: 1;
    height: 1px;
    background: var(--border-medium);
  }
  
  .rule-end {
    font-size: 0.5rem;
    color: var(--border-dark);
    padding: 0 var(--space-xs);
  }
  
  .rule-center {
    font-size: 0.8rem;
    color: var(--border-dark);
    padding: 0 var(--space-sm);
  }
  
  /* ─── Subtitle ─── */
  .masthead-subtitle {
    font-family: var(--font-meta);
    font-size: 1.1rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--ink-dark);
    margin: 0;
    font-weight: 400;
  }
  
  .compact .masthead-subtitle {
    font-size: 0.9rem;
  }
  
  .masthead-tagline {
    font-family: var(--font-body);
    font-style: italic;
    font-size: 0.9rem;
    color: var(--ink-faded);
    margin: var(--space-sm) 0 0;
    letter-spacing: 0.03em;
  }
  
  /* ─── Date Bar ─── */
  .masthead-date-bar {
    margin-top: var(--space-md);
    padding: var(--space-xs) var(--space-lg);
    background: var(--paper-dark);
    border: 1px solid var(--border-medium);
    display: inline-block;
  }
  
  .date-text {
    font-family: var(--font-meta);
    font-size: 0.8rem;
    letter-spacing: 0.1em;
    color: var(--ink-medium);
    text-transform: uppercase;
  }
  
  /* ─── Bottom Border ─── */
  .masthead-border-bottom {
    margin-top: var(--space-md);
  }
  
  /* ─── Responsive ─── */
  @media (max-width: 768px) {
    .masthead-title {
      font-size: 2.8rem;
      letter-spacing: 0.05em;
    }
    
    .title-flourish-left,
    .title-flourish-right {
      font-size: 1rem;
    }
    
    .masthead-subtitle {
      font-size: 0.9rem;
      letter-spacing: 0.2em;
    }
    
    .masthead-info-bar {
      font-size: 0.65rem;
      gap: var(--space-sm);
    }
  }
  
  @media (max-width: 600px) {
    .masthead {
      margin-bottom: var(--space-lg);
    }
    
    .masthead-border-top {
      margin-bottom: var(--space-xs);
    }
    
    .border-ornaments {
      gap: var(--space-md);
    }
    
    .ornament {
      font-size: 0.8rem;
    }
    
    .masthead-title {
      font-size: 2rem;
      letter-spacing: 0.03em;
    }
    
    .title-flourish-left,
    .title-flourish-right {
      display: none;
    }
    
    .compact .masthead-title {
      font-size: 1.6rem;
    }
    
    .masthead-subtitle {
      font-size: 0.75rem;
      letter-spacing: 0.15em;
    }
    
    .masthead-rule {
      max-width: 250px;
    }
    
    .masthead-tagline {
      font-size: 0.75rem;
      padding: 0 var(--space-sm);
      line-height: 1.5;
    }
    
    .masthead-info-bar {
      flex-wrap: wrap;
      gap: var(--space-xs);
    }
    
    .masthead-date-bar {
      padding: var(--space-xs) var(--space-sm);
    }
    
    .date-text {
      font-size: 0.65rem;
    }
  }
</style>
