---
interface Props {
  showDate?: boolean;
  compact?: boolean;
}

const { showDate = true, compact = false } = Astro.props;

// Format date in Victorian newspaper style
const today = new Date();
const options: Intl.DateTimeFormatOptions = { 
  weekday: 'long', 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
};
const formattedDate = today.toLocaleDateString('en-US', options);

// Calculate "issue number" (days since site launch - arbitrary start date)
const launchDate = new Date('2025-01-01');
const issueNumber = Math.floor((today.getTime() - launchDate.getTime()) / (1000 * 60 * 60 * 24));
---

<header class:list={["masthead", { compact }]}>
  <div class="masthead-border-top"></div>
  
  <div class="masthead-content">
    <a href="/" class="masthead-title-link">
      <h1 class="masthead-title">Rishi Mullur</h1>
    </a>
    <p class="masthead-subtitle">Writings & Dispatches</p>
  </div>
  
  {showDate && (
    <div class="masthead-meta">
      <span class="masthead-date">{formattedDate}</span>
      <span class="masthead-separator">â—†</span>
      <span class="masthead-issue">No. {issueNumber}</span>
    </div>
  )}
  
  <div class="masthead-border-bottom"></div>
</header>

<style>
  .masthead {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }
  
  .masthead.compact {
    margin-bottom: var(--space-lg);
  }
  
  .masthead-border-top,
  .masthead-border-bottom {
    height: 4px;
    background: 
      linear-gradient(
        to bottom,
        var(--border-dark) 0px,
        var(--border-dark) 1px,
        transparent 1px,
        transparent 3px,
        var(--border-dark) 3px,
        var(--border-dark) 4px
      );
    margin-bottom: var(--space-md);
  }
  
  .masthead-border-bottom {
    margin-top: var(--space-md);
    margin-bottom: 0;
  }
  
  .masthead-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .masthead-title-link {
    border: none;
    display: inline-block;
  }
  
  .masthead-title-link:hover {
    border: none;
  }
  
  .masthead-title {
    font-family: var(--font-masthead);
    font-size: 3.5rem;
    font-weight: 400;
    letter-spacing: 0.02em;
    margin: 0;
    color: var(--ink-black);
    line-height: 1.1;
    transition: color 0.2s ease;
  }
  
  .masthead-title-link:hover .masthead-title {
    color: var(--accent-red);
  }
  
  .compact .masthead-title {
    font-size: 2.5rem;
  }
  
  .masthead-subtitle {
    font-family: var(--font-meta);
    font-size: 1rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--ink-medium);
    margin: var(--space-xs) 0 0;
  }
  
  .compact .masthead-subtitle {
    font-size: 0.85rem;
  }
  
  .masthead-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
    margin-top: var(--space-md);
    font-family: var(--font-meta);
    font-size: 0.85rem;
    color: var(--ink-faded);
  }
  
  .masthead-separator {
    font-size: 0.5rem;
    color: var(--border-dark);
  }
  
  .masthead-date,
  .masthead-issue {
    letter-spacing: 0.05em;
  }
  
  @media (max-width: 600px) {
    .masthead-title {
      font-size: 2.5rem;
    }
    
    .compact .masthead-title {
      font-size: 2rem;
    }
    
    .masthead-subtitle {
      font-size: 0.85rem;
      letter-spacing: 0.15em;
    }
    
    .masthead-meta {
      flex-direction: column;
      gap: var(--space-xs);
    }
    
    .masthead-separator {
      display: none;
    }
  }
</style>
