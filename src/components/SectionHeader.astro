---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="section-header">
  <span class="header-line"></span>
  <h2 class="header-text">
    <span class="header-ornament">❧</span>
    {title}
    <span class="header-ornament flipped">❧</span>
  </h2>
  <span class="header-line"></span>
</div>

<style>
  .section-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin: var(--space-xl) 0 var(--space-lg);
  }
  
  .header-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      var(--border-dark) 20%,
      var(--border-dark) 80%,
      transparent
    );
  }
  
  .header-text {
    font-family: var(--font-headline);
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--ink-black);
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin: 0;
  }
  
  .header-ornament {
    font-size: 0.9rem;
    color: var(--border-dark);
    opacity: 0.7;
  }
  
  .header-ornament.flipped {
    transform: scaleX(-1);
  }
  
  @media (max-width: 500px) {
    .header-line {
      display: none;
    }
    
    .section-header {
      justify-content: center;
    }
    
    .header-text {
      font-size: 0.8rem;
    }
  }
</style>
