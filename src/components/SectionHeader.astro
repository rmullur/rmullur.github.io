---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="section-header">
  <span class="header-line"></span>
  <h2 class="header-text">
    <span class="header-ornament left">✦</span>
    {title}
    <span class="header-ornament right">✦</span>
  </h2>
  <span class="header-line"></span>
</div>

<style>
  .section-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin: var(--space-xl) 0 var(--space-lg);
  }
  
  .header-line {
    flex: 1;
    height: 2px;
    background: linear-gradient(
      to right,
      transparent,
      var(--border-dark) 10%,
      var(--border-dark) 90%,
      transparent
    );
    position: relative;
  }
  
  .header-line::after {
    content: '';
    position: absolute;
    top: 3px;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      var(--border-medium) 10%,
      var(--border-medium) 90%,
      transparent
    );
    pointer-events: none;
  }
  
  .header-text {
    font-family: var(--font-headline);
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--ink-black);
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin: 0;
    padding: 0 var(--space-sm);
  }
  
  .header-ornament {
    font-size: 0.6rem;
    color: var(--border-dark);
    opacity: 0.8;
  }
  
  @media (max-width: 600px) {
    .section-header {
      margin: var(--space-lg) 0 var(--space-md);
      gap: var(--space-xs);
    }
    
    .header-line::after {
      display: none;
    }
    
    .header-text {
      font-size: 0.75rem;
      letter-spacing: 0.12em;
      padding: 0 var(--space-xs);
    }
    
    .header-ornament {
      font-size: 0.5rem;
    }
  }
</style>
