---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<h2 class="section-header">
  <span class="section-header-text">{title}</span>
</h2>

<style>
  .section-header {
    font-family: var(--font-headline);
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-align: center;
    margin: var(--space-xl) 0 var(--space-md);
    color: var(--ink-black);
  }
  
  .section-header-text {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
  }
  
  .section-header-text::before,
  .section-header-text::after {
    content: 'â—†';
    font-size: 0.4rem;
    color: var(--border-dark);
  }
</style>
