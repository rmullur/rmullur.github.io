---
interface Props {
  type?: 'rule' | 'double' | 'ornate' | 'dots' | 'flourish' | 'victorian' | 'end';
}

const { type = 'rule' } = Astro.props;
---

{type === 'rule' && <hr class="ornament ornament-rule" />}

{type === 'double' && <hr class="ornament ornament-double" />}

{type === 'ornate' && (
  <div class="ornament ornament-ornate">
    <span class="ornate-wing">☙</span>
    <span class="ornate-line"></span>
    <span class="ornate-center">
      <span class="ornate-dot">✦</span>
      <span class="ornate-diamond">❖</span>
      <span class="ornate-dot">✦</span>
    </span>
    <span class="ornate-line"></span>
    <span class="ornate-wing">❧</span>
  </div>
)}

{type === 'dots' && (
  <div class="ornament ornament-dots">
    <span>·</span>
    <span>·</span>
    <span>·</span>
  </div>
)}

{type === 'flourish' && (
  <div class="ornament ornament-flourish">
    ❦
  </div>
)}

{type === 'victorian' && (
  <div class="ornament ornament-victorian">
    <span class="vic-line"></span>
    <span class="vic-ornament">✧ ❧ ✧</span>
    <span class="vic-line"></span>
  </div>
)}

{type === 'end' && (
  <div class="ornament ornament-end">
    <span>— ✦ —</span>
  </div>
)}

<style>
  .ornament {
    margin: var(--space-lg) 0;
  }
  
  .ornament-rule {
    border: none;
    height: 1px;
    background: var(--border-dark);
  }
  
  .ornament-double {
    border: none;
    height: 6px;
    background: 
      linear-gradient(
        to bottom,
        var(--border-dark) 0px,
        var(--border-dark) 2px,
        transparent 2px,
        transparent 4px,
        var(--border-dark) 4px,
        var(--border-dark) 6px
      );
  }
  
  .ornament-ornate {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    margin: var(--space-xl) 0;
  }
  
  .ornate-line {
    flex: 1;
    max-width: 80px;
    height: 1px;
    background: var(--border-medium);
  }
  
  .ornate-wing {
    font-size: 1.2rem;
    color: var(--border-dark);
    opacity: 0.7;
    padding: 0 var(--space-xs);
  }
  
  .ornate-center {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: 0 var(--space-sm);
  }
  
  .ornate-dot {
    font-size: 0.5rem;
    color: var(--border-dark);
  }
  
  .ornate-diamond {
    font-size: 0.9rem;
    color: var(--border-dark);
  }
  
  .ornament-dots {
    display: flex;
    justify-content: center;
    gap: var(--space-sm);
    font-size: 1.5rem;
    color: var(--ink-faded);
  }
  
  .ornament-flourish {
    text-align: center;
    font-size: 1.8rem;
    color: var(--border-dark);
    opacity: 0.7;
  }
  
  .ornament-victorian {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    margin: var(--space-xl) 0;
  }
  
  .vic-line {
    flex: 1;
    max-width: 100px;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      var(--border-dark) 30%,
      var(--border-dark) 70%,
      transparent
    );
  }
  
  .vic-ornament {
    font-size: 1rem;
    color: var(--border-dark);
    letter-spacing: 0.3em;
    opacity: 0.8;
  }
  
  .ornament-end {
    text-align: center;
    font-size: 0.9rem;
    color: var(--border-dark);
    letter-spacing: 0.3em;
    margin: var(--space-xl) 0;
    opacity: 0.8;
  }
  
  @media (max-width: 600px) {
    .ornate-line {
      max-width: 40px;
    }
    
    .ornate-wing {
      font-size: 0.9rem;
    }
    
    .ornate-diamond {
      font-size: 0.7rem;
    }
    
    .vic-line {
      max-width: 50px;
    }
    
    .vic-ornament {
      font-size: 0.8rem;
      letter-spacing: 0.15em;
    }
  }
</style>
