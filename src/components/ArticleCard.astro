---
interface Props {
  title: string;
  description?: string;
  date: Date;
  slug: string;
  featured?: boolean;
}

const { title, description, date, slug, featured = false } = Astro.props;

// Format date in newspaper style
const formatDate = (date: Date) => {
  const options: Intl.DateTimeFormatOptions = { 
    month: 'short', 
    day: 'numeric',
    year: 'numeric'
  };
  return date.toLocaleDateString('en-US', options);
};

// Format date for featured articles (longer format)
const formatDateLong = (date: Date) => {
  const day = date.getDate();
  const suffix = (day === 1 || day === 21 || day === 31) ? 'st' 
               : (day === 2 || day === 22) ? 'nd'
               : (day === 3 || day === 23) ? 'rd' : 'th';
  const options: Intl.DateTimeFormatOptions = { month: 'long', year: 'numeric' };
  const monthYear = date.toLocaleDateString('en-US', options);
  return `${day}${suffix} of ${monthYear}`;
};
---

{featured ? (
  <article class="article-card featured">
    <h2 class="article-title">
      <a href={`/writing/${slug}`}>{title}</a>
    </h2>
    {description && (
      <p class="article-description">{description}</p>
    )}
    <div class="article-meta">
      <time datetime={date.toISOString()}>{formatDateLong(date)}</time>
    </div>
  </article>
) : (
  <article class="article-card">
    <a href={`/writing/${slug}`} class="article-link">
      <span class="article-title">{title}</span>
      <span class="article-dots"></span>
      <time class="article-date" datetime={date.toISOString()}>
        {formatDate(date)}
      </time>
    </a>
  </article>
)}

<style>
  .article-card {
    margin-bottom: var(--space-sm);
  }
  
  /* Featured Article Style */
  .article-card.featured {
    text-align: center;
    padding: var(--space-lg) 0;
    margin-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border-medium);
  }
  
  .featured .article-title {
    font-family: var(--font-headline);
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }
  
  .featured .article-title a {
    border-bottom: none;
    color: var(--ink-black);
  }
  
  .featured .article-title a:hover {
    color: var(--accent-red);
  }
  
  .featured .article-description {
    font-style: italic;
    color: var(--ink-medium);
    max-width: 500px;
    margin: 0 auto var(--space-md);
    text-align: center;
  }
  
  .featured .article-meta {
    font-family: var(--font-meta);
    font-size: 0.85rem;
    color: var(--ink-faded);
    letter-spacing: 0.05em;
  }
  
  /* List Article Style */
  .article-link {
    display: flex;
    align-items: baseline;
    gap: var(--space-sm);
    padding: var(--space-sm) 0;
    border-bottom: none;
    color: var(--ink-black);
    transition: color 0.2s ease;
  }
  
  .article-link:hover {
    color: var(--accent-red);
  }
  
  .article-link:hover .article-title {
    color: var(--accent-red);
  }
  
  .article-link .article-title {
    font-family: var(--font-body);
    font-size: 1rem;
    transition: color 0.2s ease;
  }
  
  .article-dots {
    flex: 1;
    border-bottom: 1px dotted var(--border-light);
    min-width: 20px;
    margin-bottom: 0.3em;
  }
  
  .article-date {
    font-family: var(--font-meta);
    font-size: 0.8rem;
    color: var(--ink-faded);
    white-space: nowrap;
  }
  
  @media (max-width: 500px) {
    .featured .article-title {
      font-size: 1.5rem;
    }
    
    .article-link {
      flex-wrap: wrap;
    }
    
    .article-dots {
      display: none;
    }
    
    .article-date {
      width: 100%;
      margin-top: var(--space-xs);
    }
  }
</style>
