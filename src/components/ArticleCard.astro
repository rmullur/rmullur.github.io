---
interface Props {
  title: string;
  description?: string;
  date: Date;
  slug: string;
  featured?: boolean;
}

const { title, description, date, slug, featured = false } = Astro.props;

// Format date in newspaper style
const formatDate = (date: Date) => {
  const options: Intl.DateTimeFormatOptions = { 
    month: 'short', 
    day: 'numeric',
    year: 'numeric'
  };
  return date.toLocaleDateString('en-US', options);
};

// Format date for featured articles (longer format)
const formatDateLong = (date: Date) => {
  const day = date.getDate();
  const suffix = (day === 1 || day === 21 || day === 31) ? 'st' 
               : (day === 2 || day === 22) ? 'nd'
               : (day === 3 || day === 23) ? 'rd' : 'th';
  const options: Intl.DateTimeFormatOptions = { month: 'long', year: 'numeric' };
  const monthYear = date.toLocaleDateString('en-US', options);
  return `The ${day}${suffix} of ${monthYear}`;
};
---

{featured ? (
  <article class="article-card featured">
    <div class="featured-ornament top">❦</div>
    <h2 class="article-title">
      <a href={`/writing/${slug}`}>{title}</a>
    </h2>
    <div class="title-rule">
      <span class="rule-dot">✦</span>
    </div>
    {description && (
      <p class="article-description">{description}</p>
    )}
    <div class="article-meta">
      <span class="meta-ornament">☙</span>
      <time datetime={date.toISOString()}>{formatDateLong(date)}</time>
      <span class="meta-ornament">❧</span>
    </div>
    <div class="featured-ornament bottom">❦</div>
  </article>
) : (
  <article class="article-card">
    <a href={`/writing/${slug}`} class="article-link">
      <span class="bullet">❧</span>
      <span class="article-title">{title}</span>
      <span class="article-dots"></span>
      <time class="article-date" datetime={date.toISOString()}>
        {formatDate(date)}
      </time>
    </a>
  </article>
)}

<style>
  .article-card {
    margin-bottom: var(--space-sm);
  }
  
  /* Featured Article Style - Victorian Announcement */
  .article-card.featured {
    text-align: center;
    padding: var(--space-xl) var(--space-lg);
    margin-bottom: var(--space-lg);
    border: 2px solid var(--border-dark);
    background: var(--paper-light);
    position: relative;
  }
  
  /* Decorative inner border */
  .article-card.featured::before {
    content: '';
    position: absolute;
    top: 6px;
    left: 6px;
    right: 6px;
    bottom: 6px;
    border: 1px solid var(--border-medium);
    pointer-events: none;
  }
  
  .featured-ornament {
    font-size: 1.2rem;
    color: var(--border-dark);
    opacity: 0.6;
    line-height: 1;
  }
  
  .featured-ornament.top {
    margin-bottom: var(--space-sm);
  }
  
  .featured-ornament.bottom {
    margin-top: var(--space-sm);
  }
  
  .featured .article-title {
    font-family: var(--font-headline);
    font-size: 1.85rem;
    font-weight: 700;
    margin-bottom: var(--space-xs);
    line-height: 1.25;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }
  
  .featured .article-title a {
    border-bottom: none;
    color: var(--ink-black);
  }
  
  .featured .article-title a:hover {
    color: var(--accent-red);
  }
  
  .title-rule {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: var(--space-sm) auto;
    max-width: 200px;
  }
  
  .title-rule::before,
  .title-rule::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border-medium);
  }
  
  .rule-dot {
    font-size: 0.5rem;
    color: var(--border-dark);
    padding: 0 var(--space-sm);
  }
  
  .featured .article-description {
    font-family: var(--font-body);
    font-style: italic;
    color: var(--ink-medium);
    max-width: 480px;
    margin: var(--space-sm) auto var(--space-md);
    text-align: center;
    line-height: 1.7;
  }
  
  .featured .article-meta {
    font-family: var(--font-meta);
    font-size: 0.85rem;
    color: var(--ink-faded);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
  }
  
  .meta-ornament {
    font-size: 0.8rem;
    color: var(--border-dark);
    opacity: 0.6;
  }
  
  /* List Article Style */
  .article-link {
    display: flex;
    align-items: baseline;
    gap: var(--space-sm);
    padding: var(--space-sm) 0;
    border-bottom: none;
    color: var(--ink-black);
    transition: color 0.2s ease;
  }
  
  .article-link:hover {
    color: var(--accent-red);
  }
  
  .article-link:hover .article-title {
    color: var(--accent-red);
  }
  
  .article-link:hover .bullet {
    color: var(--accent-red);
  }
  
  .bullet {
    font-size: 0.8rem;
    color: var(--border-dark);
    opacity: 0.6;
    transition: all 0.2s ease;
  }
  
  .article-link .article-title {
    font-family: var(--font-headline);
    font-size: 1rem;
    transition: color 0.2s ease;
  }
  
  .article-dots {
    flex: 1;
    border-bottom: 1px dotted var(--border-light);
    min-width: 20px;
    margin-bottom: 0.3em;
  }
  
  .article-date {
    font-family: var(--font-meta);
    font-size: 0.8rem;
    color: var(--ink-faded);
    white-space: nowrap;
    letter-spacing: 0.05em;
  }
  
  @media (max-width: 600px) {
    .article-card.featured {
      padding: var(--space-lg) var(--space-md);
    }
    
    .featured .article-title {
      font-size: 1.4rem;
    }
    
    .featured .article-description {
      font-size: 0.95rem;
    }
    
    .featured-ornament {
      font-size: 1rem;
    }
  }
  
  @media (max-width: 500px) {
    .article-link {
      flex-wrap: wrap;
    }
    
    .bullet {
      display: none;
    }
    
    .article-dots {
      display: none;
    }
    
    .article-date {
      width: 100%;
      margin-top: var(--space-xs);
    }
  }
</style>
