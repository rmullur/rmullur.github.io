---
import '../styles/newspaper.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Rishi Mullur", 
  description = "Notes & Observations â€” Thoughts on building, technology, and the craft of making things." 
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <!-- Google Fonts - Victorian Newspaper Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+SC:wght@400;500;600;700&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500&family=Cinzel+Decorative:wght@400;700;900&display=swap" rel="stylesheet">
    
    <title>{title}</title>
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-E1H2LTYD9D"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-E1H2LTYD9D');
    </script>
  </head>
  <body>
    <div class="page-wrapper">
      <slot />
    </div>
  </body>
</html>
